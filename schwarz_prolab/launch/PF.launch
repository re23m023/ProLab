<launch>

  <!-- =========================================================
       GAZEBO SIMULATION ENVIRONMENT
       - Loads the custom playground.world into Gazebo
       - Enables GUI and sim time, starts unpaused
       ========================================================= -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find schwarz_prolab)/world/playground.world" />
      <arg name="gui" value="true" />
      <arg name="use_sim_time" value="true" />
      <arg name="paused" value="false" />
  </include>

  <!-- Global parameter: Synchronize ROS time with Gazebo simulation -->
  <param name="use_sim_time" value="true"/>

  <!-- =========================================================
       SPAWN TURTLEBOT3 ROBOT
       - Loads the robot description using xacro
       - Spawns a TurtleBot3 Burger into the Gazebo world
       ========================================================= -->
  <param name="robot_description"
         command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -model turtlebot3_burger -x 0 -y 0 -z 0 -Y 0 -param robot_description"
        output="screen"/>

  <!-- =========================================================
       BRINGUP: START ROBOT SYSTEM NODES
       - Launches TurtleBot3 sensors, drivers, and core nodes
       ========================================================= -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch" />

  <!-- =========================================================
       FILTER NODES: KF, EKF, PF
       - Launches and configures all three localization filters
       - Each filter publishes its estimated pose to a different topic
       ========================================================= -->

  <!-- Particle Filter Node (Landmarks) -->
  <node pkg="schwarz_prolab" type="filter_node_PF" name="filter_node_PF" output="screen">
      <!-- Number of particles -->
      <param name="num_particles" value="1200" />

      <!-- Velocity motion model noise (α₁ to α₄) -->
      <param name="alpha1" value="0.01" />
      <param name="alpha2" value="0.005" />
      <param name="alpha3" value="0.005" />
      <param name="alpha4" value="0.005" />

      <!-- Additional Gaussian motion noise -->
      <param name="sigma_x" value="0.01" />
      <param name="sigma_y" value="0.01" />
      <param name="sigma_theta" value="0.015" />

      <!-- Measurement noise (landmark distance + IMU yaw) -->
      <param name="sigma_range" value="0.3" />
      <param name="sigma_yaw" value="0.06" />

      <!-- Initial particle cloud spread -->
      <param name="init_std_xy" value="0.2" />
      <param name="init_std_th" value="0.2" />

      <!-- Resampling jitter (roughening) -->
      <param name="jitter_x" value="0.02" />
      <param name="jitter_y" value="0.02" />
      <param name="jitter_theta" value="0.02" />

      <!-- Outlier removal (distance from particle mean) -->
      <param name="outlier_distance_threshold" value="0.0" />
      <param name="outlier_max_remove" value="5" />

      <!-- Sign correction (if needed) -->
      <param name="omega_sign" value="1.0"/>
      <param name="v_sign" value="1.0"/>

      <!-- Standard topics -->
      <param name="frame_id" value="odom"/>
      <param name="pub_topic" value="/prediction_pf_mean"/>
  </node>

  <!-- =========================================================
       RVIZ VISUALIZATION
       - Starts RViz with a preconfigured layout for visual debug
       ========================================================= -->
  <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find schwarz_prolab)/config/config.rviz" />

  <!-- =========================================================
       TELEOPERATION (Manual Control)
       - Enables keyboard control using TurtleBot3 teleop node
       - Launches in a new xterm terminal window
       ========================================================= -->
  <node pkg="turtlebot3_teleop"
        type="turtlebot3_teleop_key"
        name="turtlebot3_teleop_key"
        launch-prefix="xterm -e"
        output="screen"/>

</launch>

